<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/notificationsFragment">


    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.diplom_jkh.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/requestsFragment"
        android:name="com.example.diplom_jkh.ui.requests.RequestsFragment"
        android:label="fragment_requests"
        tools:layout="@layout/fragment_requests" >
        <action
            android:id="@+id/action_requestsFragment_to_newRequestFragment"
            app:destination="@id/newRequestFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.diplom_jkh.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.diplom_jkh.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.diplom_jkh.ui.notifications.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/newRequestFragment"
        android:name="com.example.diplom_jkh.ui.requests.NewRequestFragment"
        android:label="fragment_new_request"
        tools:layout="@layout/fragment_new_request" />

</navigation>